# GLC Dashboard API Configuration

# Server Settings
API_HOST=0.0.0.0
API_PORT=8000
DEBUG=true

# CORS Settings (comma-separated origins for production)
CORS_ORIGINS=*

# Azure AD / Microsoft Graph API Configuration
# See docs/azure-ad-setup-guide.md for setup instructions
AZURE_TENANT_ID=your-tenant-id
AZURE_CLIENT_ID=your-client-id
AZURE_CLIENT_SECRET=your-client-secret

# OneDrive Configuration
# Drive ID: Found in OneDrive URL or via Graph API Explorer
ONEDRIVE_DRIVE_ID=your-drive-id
# Item ID: The Excel file ID (found in share link or Graph API)
ONEDRIVE_ITEM_ID=your-item-id

# Google Sheets Configuration (Primary Data Source)
# See docs/google-setup-guide.md for setup instructions
GOOGLE_SPREADSHEET_ID=your-turf-supply-spreadsheet-id
GOOGLE_SERVICE_ACCOUNT_JSON={"type":"service_account",...}

# Sales Tracker Spreadsheet (Project_Sales_Tracker_2026)
SALES_SPREADSHEET_ID=your-sales-tracker-spreadsheet-id

# Cache Configuration
GRAPH_CACHE_TTL_SECONDS=300

# Feature Flags
# If true, falls back to mock data when data source is unavailable
USE_MOCK_DATA_FALLBACK=true
